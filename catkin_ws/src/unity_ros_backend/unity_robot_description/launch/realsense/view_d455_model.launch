<launch>
    <param name="robot_description" command="$(find xacro)/xacro '$(find unity_robot_description)/xacro/sensors/realsense/test_d455_camera.xacro' use_nominal_extrinsics:=true" />
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

    <arg name="gui" default="True" />
    <param name="use_gui" value="$(arg gui)" />
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find unity_robot_description)/launch/realsense/view_model.rviz" required="true" />
</launch>
